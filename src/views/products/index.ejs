<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>
     

<body>

    <%- include('../partials/header') %> 

    <!-- </header> -->

    <main class="main-home">
        <section class="last-visit">
            <section class="banner">
                <img src="img/banner.png" alt="Banner" width='100%'>
            </section>

            <h3>PRODUCTOS DESTACADOS</h3>

            <div class="products">
                <%  let i=0%>
                <% for(let producto of productos){ %>
                    
                    <% if(producto.categoria=="destacados"){%>
                        
                <article>
                    <div class="imagenes">
                        <a href="#"> <img src="/img/<%=producto.imagen%>" alt="producto" width="360" class="product_img"></a>
                    </div>
                    <div class="main-article">
                        
                        <p class="price"><%=mil(producto.precio)%></p>
                        <p class="discount">Envío Gratis</p>
                        <h3 class="description"><%=producto.nombre%></h3>
                        <button class="botone3"><a href="/ProductDetail/<%=producto.id%>" class="letra3">Ver más </a></button>
                    </div>
                </article>
                
                <%} %> 
                <%if (i>3){  %>               
                    <%break %> 
                    <% } %> 
                    <%i++%> 
                <%} %> 
            </div>
            <h3>OFERTAS</h3>
            <div class="products">
                <% for(let producto of productos){ %>
                    <% if(producto.categoria=="ofertas"){%>
                <article>
                    <div class="imagenes">
                        <a href="#"> <img src="/img/<%=producto.imagen%>" alt="producto" width="360" class="product_img"></a>
                    </div>
                    <div class="main-article">
                        
                        <p class="price"><%=mil(producto.precio)%></p>
                        <p class="discount">Envío Gratis</p>
                        <h3 class="description"><%=producto.nombre%></h3>
                        <button class="botone3"><a href="/ProductDetail/<%=producto.id%>" class="letra3">Ver más </a></button>
                    </div>
                </article>
                <%} %> 
                <%} %> 
            </div>
            <br>
            <section class="banner">
                <img src="img/bannerAbajoo.png" alt="Banner" width='100%'>
            </section>
            
        </section>
    </main>

    <%- include('../partials/footer') %> 
    
</body>
</html>